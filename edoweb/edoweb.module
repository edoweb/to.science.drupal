/**
 * Returns a render array with all edoweb_basic entities.
 *
 * TODO: implement a pager
 */
function edoweb_basic_list_entities() {
  $content = array();
  // Load all of our entities.
  $entities = edoweb_basic_load_multiple();
  if (!empty($entities)) {
    foreach ( $entities as $entity ) {
      // Create tabular rows for our entities.
      $rows[] = array(
        'data' => array(
          'id' => l($entity->local_id, "edoweb/resource/{$entity->bundle_type}/{$entity->local_id}"),
          'title' => $entity->field_edoweb_title['und'][0]['value'],
          'bundle' => $entity->bundle_type,
        ),
      );
    }
    // Put our entities into a themed table. See theme_table() for details.
    $content['entity_table'] = array(
      '#theme' => 'table',
      '#rows' => $rows,
      '#header' => array(t('ID'), t('Title'), t('Bundle')),
    );
  }
  else {
    // There were no entities. Tell the user.
    $content[] = array(
      '#type' => 'item',
      '#markup' => t('No Edoweb entities currently exist.'),
    );
  }
  return $content;
}

